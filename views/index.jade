doctype html
html(lang=en)
  head
    title Component examples
    link(rel="stylesheet", type="text/css", href="/dist/index.css")
  body
    .container
      .row
        .col-sm-12
          h1 Welcome to component examples

      .row
        .col-sm-3
          #static
            h2 static
            .ms-wrapper
              ul.ms-tags
                each selection in selections
                  li.ms-tag
                    =selection.value
                    i.glyphicon.glyphicon-remove

              input.ms-input(placeholder="Choose a game")

              ul.ms-dropdown
                each match in matches
                  li.ms-match=match.value

        .col-sm-3
          #react
            h2 react.js
            #reactRoot

        .col-sm-3
          #ember
            h2 ember.js

        .col-sm-3
          #backbone
            h2 backbone.js

    script(src="/vendor/jquery.js")
    script(src="/vendor/handlebars.js")
    script(src="/vendor/ember.js")
    script(src="/vendor/react.js")
    script(src="/dist/templates.js")
    script(src="/dist/components.js")
